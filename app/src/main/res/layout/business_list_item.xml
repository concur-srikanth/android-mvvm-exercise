<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="businessUIModel"
            type="com.turo.assignment.ui.main.model.BusinessUIModel"
            />
    </data>

     <androidx.cardview.widget.CardView
            android:padding="@dimen/padding_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/businessName"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:paddingLeft="@dimen/left_margin"
                android:text="@{businessUIModel.businessName}"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_marginRight="40dp"
                 android:layout_marginLeft="@dimen/left_margin"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/rating"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    android:paddingLeft="@dimen/left_margin"
                    android:text="@{businessUIModel.rating}"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginRight="@dimen/left_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/phoneNum"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    android:paddingLeft="@dimen/left_margin"
                    android:inputType="phone"
                    android:autoLink="phone"
                    android:linksClickable="true"
                    android:text="@{businessUIModel.phoneNum}"
                    android:layout_below="@+id/businessName"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    android:paddingLeft="@dimen/left_margin"
                    android:inputType="phone"
                    android:layout_below="@+id/phoneNum"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/left_margin"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"/>

                <TextView
                    android:id="@+id/webUrl"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_dark"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="@string/yelp_link"
                    android:inputType=""
                    android:padding="@dimen/left_margin"
                    android:layout_below="@+id/imageView"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

</layout>
